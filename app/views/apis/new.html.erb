<%= form_for @api, :url => { :action => "index" } do |f| %>

	<%= f.label :name %>
	<%= f.text_field :name %><br>
	
	<%= f.label :description %>
	<%= f.text_field :description %><br>
	
	<%= f.label :category %>
	<%= f.select(:category, @cat_array) %><br>
	
	<%= f.label :url %>
	<%= f.text_field :url %><br><br>
	<%= f.submit "Add" %>
<% end %>